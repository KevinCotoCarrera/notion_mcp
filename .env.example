# Notion MCP Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# NOTION API CONFIGURATION
# =============================================================================
# Get your Notion API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=

# For OAuth authentication (optional, for multi-user apps)
# Create an integration at: https://www.notion.so/my-integrations
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
NOTION_REDIRECT_URI=http://localhost:3000/api/notion/callback

# Notion API version (default: 2022-06-28)
NOTION_API_VERSION=2022-06-28

# =============================================================================
# DEEPSEEK LLM CONFIGURATION
# =============================================================================
# Get your DeepSeek API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=

# DeepSeek API endpoint (default: https://api.deepseek.com/v1)
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Model to use (default: deepseek-chat)
DEEPSEEK_MODEL=deepseek-chat

# Maximum tokens in response (default: 2048)
DEEPSEEK_MAX_TOKENS=2048

# Temperature for response randomness (0-2, default: 0.7)
DEEPSEEK_TEMPERATURE=0.7

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Backend URL (if using external backend)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000/v1
